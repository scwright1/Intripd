		<div id="auth-login">
			<div class="auth-login-title">
				<p>Already got an account? Log in here.</p>
			</div>
			<form role="form"  {{action 'login' on='submit'}}>
				{{#if loginFailed}}
					<div class="danger">Invalid Email or Password</div>
				{{/if}}
				<div class="form-group auth-form-element-group">
					<label for="email" class="auth-form-label">Email Address</label>
					{{input value=email class="form-control auth-input" placeholder="Email Address" type="text"}}
				</div>
				<div class="form-group auth-form-element-group">
					<label for="password" class="auth-form-label">Password</label>
					{{input value=password type="password" class="form-control auth-input" placeholder="Password"}}
				</div>
				<button type="submit" class="btn btn-info btn-block login-override">Log In</button>
				<input type="checkbox">Remember Me</input> | <b>Forgot your password?</b>
			</form>
		</div>