	
	<div class="create_trip">
		<div class="row">
			<div class='col-xs-1'></div>
			<div class='col-xs-10'>
				<h6>{{ac_trip.name}}</h6>
				<div style='display: none'>{{ac_trip.uid}}</div>
			</div>
		</div>
		<div class='row'>
			<div class='col-xs-1'></div>
			<div class='col-xs-10'>
				<div class="panel-group" id="trips-group">
					<div class="panel panel-default">
						<div class="panel-heading">
							<h4 class="pane-title">
								<a data-toggle="collapse" data-parent="#trips-group" href="#new-trip">
								Create A Trip
								</a> 
							</h4>
						</div>
						<div id="new-trip" class="panel-collapse collapse">
							<div class="panel-body">
								<form id="create_trip_form" role='form' {{action 'createTrip' on='submit'}}>
									<div class='form-group'>
										<label for='name'>Trip Name</label>
										{{input value=name type='text' class='form-control' placeholder="Trip Name"}}
									</div>
									<div class='form-group'>
										<label for='start'>Start Date (optional)</label>
										{{input value=start class='date form-control' type='text' placeholder="dd/mm/yyyy"}}
									</div>
									<div class='form-group'>
										<label for='end'>End Date (optional)</label>
										{{input value=end class='date form-control' type='text' placeholder="dd/mm/yyyy"}}
									</div>
									<div class='form-group'>
										<button class="btn btn-success btn-block" name='submit' type='submit'>Submit</button>
									</div>
								</form>
							</div>
						</div>
					</div>
					<div class="panel panel-default">
						<div class="panel-heading">
							<h4 class="pane-title">
								<a data-toggle="collapse" data-parent="#trips-group" href="#trip-table">
								Select A Trip
								</a> 
							</h4>
						</div>
						<div id="trip-table" class="panel-collapse collapse in">
							<div class="panel-body">
								<div id="trips-list">
									{{#each}}
										<div {{bindAttr id='uid'}} class="trip-entry" {{action "switch" this on='click'}}>
											<div class="trip-entry-top">
												<div class="trip-entry-name">{{name}}</div>
											</div>
											<div class="trip-entry-bottom">
												<div class="ti trip-entry-travellers"><i class='fa fa-user'></i> 1</div>
												<div class='trip-entry-start-hidden' hidden='hidden'>{{start_date}}</div>
												<div class='trip-entry-end-hidden' hidden='hidden'>{{end_date}}</div>
												<div class="ti trip-entry-start"></div>
												<div class="ti trip-entry-end"></div>
											</div>
										</div>
									{{/each}}
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>