
	<section id='trips-menu'>
		<div class='trips-statistics'>
		</div>
		<div class='trips-container'>
			<div class='tripbox' id='create-new-trip' {{action 'generate'}}>
			+
			</div>
			{{#each}}
				{{#view App.SidebarTripsEntryView contentBinding='this'}}
				<div {{bind-attr id='uid'}} class='tripbox'>
					<div class='overlay'>
						<div class='select' {{action 'switch' this on='click'}}><span class='fontello-check'></span></div>
						<!--<div class='edit'><span class='fontello-cog'></span></div>-->
						<div class='delete' data-context='delete' {{action 'destroy' this}}><span class='fontello-cancel'></span></div>
					</div>
				    {{name}}
				    {{tripdate this date='start_date'}}
				   	{{tripdate this date='end_date'}}
			   	</div>
			   	{{/view}}
			{{/each}}
		</div>
	</section>
	<section id='create-trip-dialog'>
		{{outlet 'trip-content'}}
	</section>