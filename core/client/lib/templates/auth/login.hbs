{{render 'menu'}}

<!-- Auth content -->
<div class='login-container'>
	<div class='auth-header'>Sign In</div>
	<div class='auth-desc'>Got an Account? Awesome! {{#link-to 'auth.register'}}Or Sign Up!{{/link-to}}</div>
	<form id='login-form' {{action 'login' on='submit'}}>
		<div class='form-group'>
			<div class='input-group'>
				<span class='input-group-addon'>&#xf007;</span>
				{{input value=email class="form-control" placeholder="Email Address" type="email" autocomplete='off'}}
			</div>
		</div>
		<div class='form-group'>
			<div class='input-group'>
				<span class='input-group-addon'>&#xf023;</span>
				{{input value=password type="password" class="form-control" placeholder="Password" autocomplete='off'}}
			</div>
		</div>
		{{input type='checkbox' id='remember' checked=remember}}<label id='remember-check' for='remember'>Remember Me</label>
		<a class='forgot-password' href='#' style='display: none'>Forgotten Your Password?</a>
		<button type='submit'>Sign In</button>
	</form>
</div>

{{render 'footer'}}